        anm_walk2sprint_jammed             = m9_new_walk2sprint, idle_jammed
        anm_sprint2walk_jammed             = m9_new_sprint2walk, idle_jammed


        ; Empty Jammed Animation Variants
        anm_idle_empty_jammed                    = m9_new_idle, idle_jammed
